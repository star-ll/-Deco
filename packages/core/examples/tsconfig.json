	"compilerOptions": {
		"target": "ESNext",
		"strict": true,
		"rootDir": "./",
		"baseUrl": "./",
		"outDir": "./dist",
		"moduleResolution": "Node",
		"jsx": "preserve",
		"jsxFactory": "__deco_h_",
